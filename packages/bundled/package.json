{
  "name": "@terragon/bundled",
  "description": "Bundles various scripts and exports them as a string.",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=esm --outfile=dist/index.js --loader:.txt=text --sourcemap",
    "dev": "pnpm build --watch",
    "start": "node dist/index.js",
    "tsc-watch": "tsc --noEmit --watch --preserveWatchOutput",
    "tsc-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./src/index.ts"
    }
  },
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "@terragon/daemon": "workspace:*",
    "@terragon/mcp-server": "workspace:*"
  },
  "devDependencies": {
    "@terragon/tsconfig": "workspace:*",
    "esbuild": "^0.24.0",
    "typescript": "^5.8.3"
  }
}
