{
  "name": "@terragon/utils",
  "version": "1.0.0",
  "description": "Shared utility functions for the terragon monorepo",
  "type": "module",
  "exports": {
    "./error": "./src/error.ts",
    "./retry": "./src/retry.ts",
    "./encryption": "./src/encryption.ts"
  },
  "scripts": {
    "tsc-check": "tsc --noEmit",
